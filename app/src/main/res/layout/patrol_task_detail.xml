<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <!-- head-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#00BFFF">
            <LinearLayout
                android:id="@+id/id_detail_menu_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_back_menu"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">
                <ImageView
                    android:id="@+id/id_detail_back_img"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_ab_back_holo_light_am"/>
                <TextView
                    android:id="@+id/id_detail_back_text"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="返回"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/id_detail_back_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="巡检详情"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/id_detail_patrol_loc"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/patrol_location"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>

        <!-- detail-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="#C0C0C0">
            <TextView
                android:id="@+id/id_detail_plan_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="巡检计划ID: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_plan_ID_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_detail_plan_ID"
                android:text="1214235"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/id_detail_man_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_detail_man_ID_in"
                android:text="巡检人员ID: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_man_ID_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="2015123456"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_patrol_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/id_detail_plan_ID"
                android:text="巡检名称: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_patrol_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_plan_ID"
                android:layout_toRightOf="@+id/id_detail_patrol_name"
                android:text="A片区巡检"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_man_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_man_ID"
                android:layout_toLeftOf="@+id/id_detail_man_name_in"
                android:text="巡检人员名称: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_man_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_man_ID_in"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="张默默"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_plan_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_detail_patrol_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="任务开始时间: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_plan_start_time_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_patrol_name_in"
                android:layout_toRightOf="@+id/id_detail_plan_start_time"
                android:text="2015-8-25"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_dispatch_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_patrol_name"
                android:layout_toLeftOf="@+id/id_detail_dispatch_man_in"
                android:text="指派人: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_dispatch_man_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_patrol_name_in"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="李某某"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_plan_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_detail_plan_start_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="任务截止时间: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_task_deadline_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_plan_start_time_in"
                android:layout_toRightOf="@+id/id_detail_plan_deadline"
                android:text="2015-9-15"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_patrol_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_dispatch_man"
                android:layout_toLeftOf="@+id/id_detail_patrol_frequency_in"
                android:text="巡检频率: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_patrol_frequency_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_dispatch_man_in"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="1周"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_area_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_detail_plan_deadline"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="区域ID: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_area_ID_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_task_deadline_in"
                android:layout_toRightOf="@+id/id_detail_area_ID"
                android:text="东二区"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_area_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_detail_area_ID"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="区域地址: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_area_address_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_area_ID_in"
                android:layout_toRightOf="@+id/id_detail_area_address"
                android:text="高新七路20号"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_area_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_detail_area_address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="区域轮廓坐标: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_detail_area_point_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_detail_area_address"
                android:layout_toRightOf="@+id/id_detail_area_point"
                android:text="东经120°-150°  北纬60°-70度"
                android:textSize="12sp"/>
        </RelativeLayout>

        <!-- list head-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FF4500"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/id_detail_tab_1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="巡检点ID"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/id_detail_tab_2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="巡检点名称"/>
            <TextView
                android:id="@+id/id_detail_tab_3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="巡检点地址"/>
            <TextView
                android:id="@+id/id_detail_tab_4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="设备数量"/>
            <TextView
                android:id="@+id/id_detail_tab_5"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="操作"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.water.nvgtor.watermanegement.view.UnPatrolLoadListview
                android:id="@+id/id_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="#696969"
                android:dividerHeight="2dp">
            </com.water.nvgtor.watermanegement.view.UnPatrolLoadListview>
        </LinearLayout>

        <Button
            android:id="@+id/id_detail_task_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="完成"/>



</LinearLayout>